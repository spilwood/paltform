{
  "mcpServers": {
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"],
      "env": {},
      "disabled": false,
      "autoApprove": ["fetch"]
    },
    "Context7": {
      "command": "bunx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "ctx7sk-3300007b-e2ac-4596-9695-c9b304ab17d8"
      ],
      "env": {},
      "disabled": false,
      "autoApprove": ["resolve-library-id", "get-library-docs"]
    },
    "playwright": {
      "command": "bunx",
      "args": ["@playwright/mcp@latest"],
      "autoApprove": [
        "browser_navigate",
        "browser_evaluate",
        "browser_snapshot",
        "browser_type",
        "browser_click",
        "browser_wait_for",
        "browser_run_code",
        "browser_close"
      ]
    }
  }
}
