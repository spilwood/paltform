{
  "name": "@spilwood/root",
  "private": true,
  "engines": {
    "node": "^22.21.0",
    "bun": "^1.3.3"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "bun --filter @spilwood/auth generate",
    "db:push": "turbo -F @spilwood/db push",
    "db:studio": "turbo -F @spilwood/db studio",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @spilwood/web...",
    "format": "biome format . --skip-parse-errors",
    "format:fix": "biome format --write . --skip-parse-errors",
    "lint": "biome lint . --skip-parse-errors",
    "lint:fix": "biome lint --write . --skip-parse-errors",
    "check": "biome check . --skip-parse-errors",
    "check:fix": "biome check --write . --skip-parse-errors",
    "lint:ws": "bunx sherif@latest",
    "postinstall": "bun lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@turbo/gen": "^2.6.3",
    "dotenv-cli": "11.0.0",
    "turbo": "^2.6.3",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ]
}
